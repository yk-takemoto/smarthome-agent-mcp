{
  "name": "@smarthome-agent-mcp/mcp_server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for smarthome-agent",
  "private": true,
  "type": "module",
  "bin": {
    "mcp_server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "lint": "eslint",
    "test": "node --test -r tsconfig-paths/register --require ts-node/register ./tests/**/test_*.ts",
    "compile": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "build": "yarn format && yarn lint && yarn compile",
    "watch": "tsc --watch",
    "inspector": "yarn dlx @modelcontextprotocol/inspector build/index.js",
    "full": "yarn format && yarn lint && yarn test && yarn compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yk-takemoto/smarthome-agent-mcp"
  },
  "author": "Yukihiro Takemoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yk-takemoto/smarthome-agent-mcp/issues"
  },
  "homepage": "https://github.com/yk-takemoto/smarthome-agent-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.11.1",
    "@yk-takemoto/error-handler": "github:yk-takemoto/error-handler-ts#main",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^18.18.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "types": "./build/index.d.ts",
  "directories": {
    "build": "build",
    "test": "tests"
  }
}
